<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Document</title>
</head>
<body>
 <!-- Add Product Modal -->
 <div class="modal fade" id="addProductModal" tabindex="-1">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title">Add New Product</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <form action="/products/add" method="POST">
              <div class="modal-body">
                  <div class="mb-3">
                      <label class="form-label">Name</label><br>
                      <input type="text" class="form-control" name="name" required>
                  </div><br>
                  <div class="mb-3">
                      <label class="form-label">Description</label><br>
                      <textarea class="form-control" name="description" required></textarea>
                  </div><br>
                  <div class="mb-3">
                      <label class="form-label">Price</label><br>
                      <input type="number" class="form-control" name="price" min="0" step="0.01" required>
                  </div><br><br>
                  <div class="mb-3">
                      <label class="form-label">Stock</label><br>
                      <input type="number" class="form-control" name="stock" min="0" required>
                  </div><br><br>
                  <div class="mb-3">
                      <label class="form-label">imgUrl</label><br>
                      <input type="url" class="form-control" name="imgUrl" min="0" required>
                  </div><br>
                  <div class="mb-3">
                      <label class="form-label">CategoryId</label><br>
                      <!-- <input type="url" class="form-control" name="CategoryId" min="0" required> -->
                      <div>
                       <select id="category" class="form-control form-control-sm" name="CategoryId" required>
                        <option value="1">Makanan & Minuman</option> 
                        <option value="2">Gadget</option> 
                        <option value="3">Aksesoris & Perhiasan</option> 
                        <option value="4">Buku</option> 
                        <option value="5">Crafting</option> 
                        <option value="6">Pakaian</option> 
                        <option value="7">Dapur</option> 
                        <option value="8">Kesehatan & Kecantikan</option> 
                        <option value="9">Hobi & Mainan</option> 
                        <option value="10">Elektronik</option> 
                        <option value="11">Rumah Tangga</option> 
                        <option value="12">Olahraga</option> 
                        <option value="13">Pertukangan</option> 
                        <option value="14">Kantor</option> 
                        <option value="15">Otomotif</option>
                    </select>
                      </div>
                  </div>
              </div><br><br>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Add Product</button>
              </div>
          </form>
      </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>