<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Products Management</h1>
        <!-- Add Product Button -->
        <a href="/products/add" class="btn btn-primary mb-4">Add New Product</a>
        <!-- Products Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((e, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= e.imgUrl %></td>
                        <td><%= e.name %></td>
                        <td><%= e.description %></td>
                        <td><%= formatCurrency(e.price) %></td>
                        <td><%= e.stock %></td>
                        <td>
                            <!-- Buy Form -->
                            <form action="/products/<%= e.id %>/buy" method="POST" class="d-inline">
                                <input type="number" name="quantity" min="1" max="<%= e.stock %>" value="1" class="form-control d-inline" style="width: 70px;">
                                <button type="submit" class="btn btn-success btn-sm">Buy</button>
                            </form>

                            <!-- Update Button -->
                            <a href="/products/<%= e.id %>/update" class="btn btn-warning btn-sm">Update</a>

                            <!-- Delete Button -->
                            <a href="/products/<%= e.id %>/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    
</body>
</html>

